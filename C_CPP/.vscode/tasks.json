    "version": "2.0.0",
    "tasks": [
        {
            "label": "build LPC812 example",
            "type": "shell",
            "command": "make PROJECT=LPC812_example",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build LPC824 example",
            "type": "shell",
            "command": "make PROJECT=LPC824_example",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make  PROJECT=LPC812_example clean",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}